<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/bgindex3"
    tools:context=".Status">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnKembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kembali"
                android:textColor="@color/black"
                android:backgroundTint="@color/orangeyoung"
                android:textStyle="bold"
                android:textSize="15sp"
                android:onClick="btnKembali"
                />

            <TextView
                android:id="@+id/txtUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logopdam" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Data Pelanggan"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvNik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor KTP"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvPekerjaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pekerjaan"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor telepon"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvRt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RT"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvRw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RW"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvKelurahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelurahan"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvKecamatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kecamatan"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvKodePos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Pos"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvJumlahPenghuni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah Penghuni"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvBiaya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biaya Registrasi"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/tvToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Token Pembayaran"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/tvStatusBiaya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Pembayaran"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btnBuktiBayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Bukti Pembayaran Registrasi"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            android:textStyle="bold"
            android:textSize="12sp"
            android:onClick="btnBuktiBayar"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Status"
            android:textColor="#C51F01"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>